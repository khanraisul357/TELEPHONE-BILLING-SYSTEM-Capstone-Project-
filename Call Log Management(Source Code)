#include <stdio.h>
#include <string.h>

typedef struct usersInfo {
    int user_id;
    char username[13];
    char email[30];
    char phone[13];  
    char password[20];
    char address[50];
    float balance;
}USER;


typedef struct callInfo{
    char callerNumber[20];
    char receiverNumber[20];
    char date[15];
    char call_received_Time[30]; // User registered time
    char call_end_Time[30]; // User login time
    char duration[10];
    char callType[10];
    int duration;
    float cost;
}CALLlogs;

#define max_calls 100
CALLlogs calls[max_calls];
int callLOG_count=0;

